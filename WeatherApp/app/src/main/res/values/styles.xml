<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundDefaultColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for settings activity -->
    <style name="SettingsMainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#D8D8D8</item>
    </style>

    <!-- Style for ToolBar -->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ToolBarTheme</item>
        <item name="popupTheme">@style/ToolBarPopupTheme</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="ToolBarPopupTheme">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Style for Main Horizontal Scroll Block -->
    <style name="HorizontalScrollStyle_CommonBlock">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="HorizontalScrollStyle_DataBlock_High">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="HorizontalScrollStyle_DataBlock_Low">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>

